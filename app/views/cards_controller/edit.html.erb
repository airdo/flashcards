<div class="container">
	<div class="row">
		<div class="col-sm-4 col-sm-offset-4 text-center">
		<h1>Editing card</h1>
 
		<%= form_for :card, url: cards_controller_url(@card), method: :patch do |f| %>
		  <% if @card.errors.any? %>
		    <div id="error_explanation">
		      <h2>
		        <%= pluralize(@card.errors.count, "error") %> prohibited
		        this article from being saved:
		      </h2>
		      <ul>
		        <% @card.errors.full_messages.each do |msg| %>
		          <li><%= msg %></li>
		        <% end %>
		      </ul>
		    </div>
		  <% end %>
		 
		  <p>
		    <%= f.label :original_text %><br>
		    <%= f.text_field :original_text %>
		  </p>
		 
		  <p>
		    <%= f.label :translated_text %><br>
		    <%= f.text_area :translated_text %>
		  </p>
		 
		  <p>
		    <%= f.submit %>
		  </p>
		 
		<% end %>
		 
		<%= link_to 'Back', cards_controller_url %>
		</div>
	</div>
</div>